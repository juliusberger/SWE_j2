<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="600.0"
      prefWidth="700.0"
      stylesheets="assets/global.css"
      xmlns="http://javafx.com/javafx/8.0.112"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="components.RootView"
      fx:id="rootVBox">

	<MenuBar>
		<Menu mnemonicParsing="false"
		      text="Datei">
			<MenuItem mnemonicParsing="false"
			          text="Neues Projekt"
			          fx:id="newProjectItem"/>
			<SeparatorMenuItem mnemonicParsing="false"/>

			<MenuItem mnemonicParsing="false"
			          text="Projekt öffnen"
			          fx:id="openProjectItem"/>
			<MenuItem mnemonicParsing="false"
			          text="Projekt speichern"
			          fx:id="saveProjectItem"/>
			<SeparatorMenuItem mnemonicParsing="false"/>

			<MenuItem mnemonicParsing="false"
			          text="XML-Import"
			          fx:id="XMLImportItem"/>
			<MenuItem mnemonicParsing="false"
			          text="XML-Export"
			          fx:id="XMLExportItem"/>
		</Menu>
	</MenuBar>

	<TabPane prefHeight="600.0"
	         prefWidth="600"
	         tabClosingPolicy="UNAVAILABLE">
		<Tab text="Projektdaten">
			<fx:include source="projectData/projectData.fxml"/>
		</Tab>
		<Tab text="IST-Analyse">
			<fx:include source="stateAnalysis/stateAnalysis.fxml"/>
		</Tab>
		<Tab text="SOLL-Analyse">
			<fx:include source="futureAnalysis/futureAnalysis.fxml"/>
		</Tab>
		<Tab text="Lastenheft">
			<fx:include source="requirements/requirements.fxml"/>
		</Tab>
		<Tab text="Aufwandsschätzung">
			<fx:include source="costEstimation/costEstimation.fxml"/>
		</Tab>
		<Tab text="Glossar">
			<fx:include source="glossary/glossary.fxml"/>
		</Tab>
	</TabPane>

</VBox>
